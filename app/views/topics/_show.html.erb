<details class="topic-details">
  <summary>
    <h3>
      <%= topic.name %>

      <%= link_to edit_topic_path(topic) do %>
        <i class="far fa-edit"></i>
      <% end %>

      <%= link_to topic_path(topic), method: :delete, data: { confirm: "Confirm delete?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </h3>
  </summary>

  <%= yield %>
</details>
