<% content_for :title, "All students" %>

<h1>All students</h1>

<%= link_to "Add new student", new_student_path, class: "btn btn-primary" %>

<ul>
  <% @students.each do |student| %>
    <li>
      <%= link_to student_path(student) do %>
        <%= student.name_en %> (<%= student.name_zh %>)
      <% end %>
    </li>
  <% end %>
</ul>
